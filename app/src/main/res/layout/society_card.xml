<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_height="300dp"
        android:layout_width="match_parent"
        android:padding="0dp"
        card_view:cardCornerRadius="4dp"
        card_view:cardElevation="10dp">

        <LinearLayout
            android:layout_margin="0dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/DeepSkyBlue">

            <ImageView
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:background="@color/black" />

            <TextView
                android:id="@+id/rv_tv_title"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:text = "Title"
                android:gravity="center_vertical"
                android:textSize="35dp"
                android:fontFamily="casual"
                android:textColor="@color/com_facebook_button_background_color_pressed"
                android:textAlignment="center"
                />
            <LinearLayout
                android:layout_margin="0dp"
                android:padding="0dp"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:orientation="horizontal"
                android:weightSum="10">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="65dp"
                    android:layout_weight="6"
                    android:text="Techinical"
                    android:textSize="25dp"
                    android:gravity="center_horizontal"
                    />
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="35dp"
                    android:layout_weight="2"
                    android:src="@drawable/ic_bookmark_black_36dp"
                    android:layout_marginBottom="5dp"/>
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="35dp"
                    android:src="@drawable/ic_favorite_black_36dp"
                    android:layout_weight="2"/>


            </LinearLayout>

        </LinearLayout>


    </android.support.v7.widget.CardView>

</FrameLayout>